<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fakeHomeRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full-screen background image (restored with id so activity code can reference it) -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@null"
        android:src="@drawable/background"
        android:clickable="false"
        android:focusable="false" />

    <!-- Status bar / clock area -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/jitterClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="20sp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- App GridView. Provide a stable columnWidth and ensure layout_below/above to get measured height -->
    <GridView
        android:id="@+id/appGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/statusBar"
        android:layout_above="@id/dock"
        android:numColumns="3"
        android:verticalSpacing="16dp"
        android:horizontalSpacing="8dp"
        android:columnWidth="96dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <!-- Dock (bottom icons) -->
    <LinearLayout
        android:id="@+id/dock"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="@android:color/transparent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back" />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_home"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Home" />

        <ImageButton
            android:id="@+id/btnRecent"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_recent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Recent" />
    </LinearLayout>
</RelativeLayout>
